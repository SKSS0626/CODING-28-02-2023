#include <stdio.h>

int main() {
    int rows;
    int i, j, space;
    printf("Enter size:");
    scanf("%d",&rows);

    for (i = 0; i < rows; i++) {
        for (space = 0; space < (rows - i - 1); space++) {
            printf(" ");
        }
        for (j = 0; j < (i + 1); j++) {
            printf("* ");
        }
        printf("\n");
    }

    return 0;
}
